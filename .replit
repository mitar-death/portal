modules = ["python-3.10", "vue-node-20", "nodejs-20", "bash", "web", "python3", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "openssl", "postgresql"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn server.app.main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "yarn serve --port 5000 --host 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 42131
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "python -m uvicorn server.app.main:app --host 0.0.0.0 --port 5000 & yarn serve --port 5000"]
build = ["yarn", "build"]
