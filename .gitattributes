# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files to be normalized
*.py text
*.js text
*.vue text
*.html text
*.css text
*.md text
*.yml text
*.yaml text
*.json text
*.txt text
*.ini text
*.sh text eol=lf
*.toml text

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.session binary
*.db binary
*.sqlite3 binary

# Exclude from git archive
.gitattributes export-ignore
.gitignore export-ignore
